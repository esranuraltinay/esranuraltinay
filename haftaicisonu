package haftaÄ±cisonu;
import java.util.Scanner;
public class HaftaIciSonu {
    public static void main(String[] args) {
     Scanner klavye = new Scanner(System.in);
     System.out.print("Gun icin bir sayi giriniz (1-7): ");
     int gun = klavye.nextInt();
     
     switch (gun) {
         case 1:
         case 2:
         case 3:
         case 4:
         case 5: System.out.println("Hafta ici"); break;
         case 6:
         case 7: System.out.println("Hafta sonu");    
             
     }
    }
    
}
